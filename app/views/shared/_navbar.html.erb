<div class="navbar-techforgood">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-techforgood-brand" do %>
    <%= image_tag "handson-logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-techforgood-right hidden-xs hidden-sm">

  <!-- Text links -->
  <a href="#Courses" class="navbar-techforgood-item navbar-techforgood-link">Courses</a>
  <a href="#How does it work?" class="navbar-techforgood-item navbar-techforgood-link">How does it work?</a>
  <a href="#FAQ" class="navbar-techforgood-item navbar-techforgood-link">FAQ</a>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-techforgood-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar-large dropdown-toggle", id: "navbar-techforgood-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-techforgood-dropdown-menu">
            <li>
              <%= link_to dashboard_users_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-techforgood-item navbar-techforgood-link" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-techforgood-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-techforgood-dropdown-menu">
        <li>
          <%= link_to dashboard_users_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

