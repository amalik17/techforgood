<div class="navbar-fixed-top">
  <div class="container">

    </div>
    <div class="navbar-techforgood">
      <!-- Logo -->
      <%= link_to root_path do %>
        <i class="fa fa-graduation-cap navbar-techforgood-brand" aria-hidden="true"></i>
      <% end %>

      <!-- We can use this to add the logo image when we have a proper one -->
      <%#= link_to root_path, class: "navbar-techforgood-brand" do %>
        <%#= image_tag "handson-logo.png" %>
      <%# end %>

      <!-- Right Navigation -->
      <div class="navbar-techforgood-right hidden-xs hidden-sm">

      <!-- Text links -->
      <%= link_to "Courses", courses_path(:anchor => "Courses"), class: "navbar-techforgood-item navbar-techforgood-link" %>
      <%= link_to "How does it work?", courses_path(:anchor => "How does it work?"), class: "navbar-techforgood-item navbar-techforgood-link" %>
      <%= link_to "FAQ", courses_path(:anchor => "FAQ"), class: "navbar-techforgood-item navbar-techforgood-link" %>
      <%= link_to "Pricing", courses_path(:anchor => "Pricing"), class: "navbar-techforgood-item navbar-techforgood-link" %>

        <!-- Different navigation if login or not -->
        <% if user_signed_in? %>

          <!-- Profile picture and dropdown -->
          <div class="navbar-techforgood-item">
            <div class="dropdown">
              <%= image_tag "http://placehold.it/30x30", class: "avatar-large dropdown-toggle", id: "navbar-techforgood-menu", "data-toggle" => "dropdown" %>
              <ul class="dropdown-menu dropdown-menu-right navbar-techforgood-dropdown-menu">
                <li>
                  <%= link_to dashboard_users_path do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>

        <% else %>

          <!-- Login text link -->
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-techforgood-item navbar-techforgood-link" %>

        <% end %>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-techforgood-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-techforgood-dropdown-menu">
            <li>
              <%= link_to dashboard_users_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>
