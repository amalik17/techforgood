  <!-- Course Information -->
  <div class="course-banner parallax bottom-position" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 70%), url(<%= image_path('hold3dhands.jpg') %>);">
    <div class="banner-content">
      <h3 class="fredoka"><%= @course.title %></h3>
      <p><em><%=  @course.tagline %></em></p>
      <a><span class="">
      <%= render :partial => 'enrollments/form', locals: {course: @course, enrollment: Enrollment.new } %>
      </span></a>
    </div>
  </div>
    <!-- course_show_page.scss -->
  <div class="course_container">
  <%= render "courses/sidebar" %>
  <div class="left_padding">
  <div class="course-content" id="intro">
    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
        <h4 class="text-blue7 text-left"> Course Overview</h4>
        <hr style="width: 25%; height:2px;border-top:1px solid #3DBE31" align="left" />
        <div class="">
          <p class="text-smooth body-gray "><%= @course.description %></p>
        </div>
      </div>
    </div>

    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
      <h4 class= "text-blue7 text-left">Syllabus </h4>
      <hr style="width: 25%; height:2px;border-top:1px solid #3DBE31" align="left" />
      <div class="syllabus_box">
      <p class="green_box">Placeholder</p>
      <ul class="text-left">
        <li> <% course_length = 0  %>
             <% @course.lessons.each do |lesson| %>
             <% course_length += lesson.minutes %>
             <% end %>
             <span class="green_text">Class length:</span> <%= course_length.to_f / 60 %> hours </li>
        <li><span class="green_text">Certificate:</span> Placeholder info </li>
        <li><span class="green_text"> How To Pass:</span> Placeholder text </li>
      </ul>
      </div>
      </div>

    </div>

    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
      <div class="syllabus_box">
      <p class="green_box">Lessons</p>
        <div class="course_syllabus">
          <div class="">
            <% lesson_num = 1 %>

            <% @course.lessons.reverse.each do |lesson| %>
              <div class="body-gray syllabus-item">
                <div>
                <h4 class="green_text no-bottom-margin text-16px"><em><%= lesson_num %>) <%= lesson.title %></em></h4>
                <p class="no-y-margin text-smooth"> <%= lesson.description %></p>
                </div>
                <div>
                <p><i class="fa fa-clock-o" aria-hidden="true"></i> <%=lesson.minutes %> minutes</p>
                </div>
              </div>

              <% lesson_num += 1 %>
            <% end %>
        </div>
        </div>
      </div>
    </div>

    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
        <h4 class="text-blue7 text-left"> Placeholder</h4>
        <hr style="width: 25%; height:2px;border-top:1px solid #3DBE31" align="left" />
        <div class="syllabus_box">
        <%= image_tag("smilingwoman.jpg", class: "img-rounded", height: '100', width: '100') %>
        </div>
        <div class="slightly_padded"></div>
         <div class="syllabus_box">
        <%= image_tag("smilingwoman.jpg", class: "img-rounded", height: '100', width: '100') %>
        </div>
      </div>
    </div>

    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
        <h4 class="text-blue7 text-left"> Reviews</h4>
        <hr style="width: 25%; height:2px;border-top:1px solid #3DBE31" align="left" />
        <div class="review_box">
          <%= image_tag("smilingwoman.jpg", class: "img-circle", height: '100', width: '100') %>
          <p>Place review here </p>
          <%= image_tag("Microsoft-Logo.png", height: '30px') %>

        </div>
        <div class="slightly_padded"></div>
        <div class="review_box">
          <%= image_tag("smilingwoman.jpg", class: "img-circle", height: '100', width: '100') %>
          <p>Place review here </p>
          <%= image_tag("Microsoft-Logo.png", height: '30px') %>

        </div>

      </div>
    </div>

    <div class="row background_white slightly_padded">
      <div class="course_intro width-720">
        <h4 class="text-blue7 text-left"> FAQ</h4>
        <hr style="width: 25%; height:2px;border-top:1px solid #3DBE31" align="left" />
        <div class="container faq-section" id="faq">
            <h4><em>Will I be paired up with people in need?</em></h4>
            <p class="text-reading-gray">As we expand our network of NGO partners, we hope for each course to be paired with real world use cases.</p><br>

            <h4><em>How can my company offer our tech?</em></h4>
            <p class="text-reading-gray">It'd be great to speak further!  Please email us at contact@learnforgood.cn</p><br>

            <h4><em>Can my company take courses as a group?</em></h4>
            <p class="text-reading-gray">We'd love to talk to you and see how we can cooperate. We could run workshops for your employees, or actually train your company to provide workshops to the local community.</p><br>

            <h4><em>What's the cost of the courses?</em></h4>
            <p class="text-reading-gray">The course fee is still being decided, but will be only used to run our operations, as we are an NGO ourselves.</p><br>
        </div>

      </div>
    </div>




