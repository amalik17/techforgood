<div id="sidebar" class="hidden-xs text-center">
    <div class="">

      <!-- WHY MODULE -->
      <div class="text-left module-completed flexbox">
        <div class="lesson-text flex-item-title text-white">
          <h5 class><strong><%= @course.title %></strong></h5>
        </div>
      </div>
      <div class="text-left lesson-tab div-relative flexbox">

        <div class="lesson-text flex-item-lesson-title">
          <h6>Course Description</h6>
        </div>
        <a class="lesson-link" href="#description" ></a>
      </div>
      <div class="text-left lesson-tab div-relative flexbox">
        <div class="lesson-text flex-item-lesson-title">
          <h6>Syllabus</h6>
        </div>
        <a class="lesson-link" href="#syllabus" ></a>
      </div>
      <div class="text-left lesson-tab div-relative flexbox">
        <div class="lesson-text flex-item-lesson-title">
          <h6>About the Organization</h6>
        </div>
        <%= link_to '', organization_path(@course.organization), class: "lesson-link" %>
      </div>


      <!-- MATERIALS & RESOURCES -->
      <div class="text-left module-materials div-relative flexbox">
        <div class="lesson-text flex-item-title">
          <h5><strong>Materials &amp; Resources </strong></h5>
        </div>
        <a class="lesson-link" href="#" ></a>
      </div>

      <div>
        <div class="enroll-btn">
          <%= render :partial => 'enrollments/form', locals: {course: @course, enrollment: Enrollment.new } %>
        </div>
      </div>

    </div>
  </div>
