<!-- Characteristics -->
<div class="wrapper">
  <div class="container text-center padded characteristics">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag "char1.png"%>
        <h4>Learn online in your own time</h4>
      </div>
      <div class="col-sm-4">
        <%= image_tag "char2.png"%>
        <h4>Study courses developed with universities and NGOs</h4>
      </div>
      <div class="col-sm-4">
        <%= image_tag "char3.png"%>
        <h4>Get support from tutors and our online learning community</h4>
      </div>
    </div>
  </div>
</div>

<!-- Courses -->
<div class="container padded" id="Courses">
  <div class="row">
    <h3 align="center">Browse Our Courses</h3>
    <br>

    <% @courses.each do |course| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="course-card">
         <div class="course-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path('madi-robson-113926_wqpmaf', height: 582, width: 824, crop: :lfill) %>);">
           <h2 class="course-card-mission text-center"><%= course.tagline %></h2>
         </div>
            <div class="course-card-description">
              <h2><%= course.title %></h2>
              <p><%= course.organization.name %></p>
              <div class="org-logos"></div>
            </div>
          <%= link_to "", course_path(course), class: "course-card-link" %>
        </div>
      </div>
    <% end %>

  </div>
</div>

<!-- Learning Process -->
<div class="wrapper-learning-process parallax" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path('zi-jian-lim-227847_j6rckn', height: 1082, width: 1624, crop: :lfill) %>);" id="How does it work?">
  <div class="container padded">
    <div class="row">
    <h3 align="center">How does it work?</h3>

      <% @steps.each do |step, icon| %>
      <div class="col-xs-12 col-md-4">
        <div class=" learning-process-card">
          <div class="learning-process-description text-center">
            <h2><%= step %></h2>
            <h1><i class="fa fa-<%= icon %>" aria-hidden="true"></i></h1>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

