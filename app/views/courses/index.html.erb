<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('homepage_banner.png') %>);">
  <div class="banner-content">
    <h1>TechForGood</h1>
    <p>Learn & Lend a Hand</p>
  </div>
</div>

<!-- Characteristics -->
<div class="container text-center padded">
