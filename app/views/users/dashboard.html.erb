<!-- Enroll Button -->
<div class="dashboard-enroll-button text-center padded">
  <%= link_to "Enroll for more courses", courses_path, class: "btn btn-primary" %>
</div>

<!-- Current Course Information -->
<div class="container padded">
  <div class="row">
    <h3 align="center">Current Courses</h3>
    <br>

    <% @user.courses.each do |course| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
       <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path('banner.jpg') %>);">
          <div class="card-description">
            <h2><%= course.title %></h2>
            <p><%= course.organization.name %></p>
          </div>
          <%= link_to "", course_path(course), class: "card-link" %>
        </div>
      </div>
    <% end %>

  </div>
</div>

